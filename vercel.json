{
  "version": 2,
  "builds": [
    {
      "use": "@vercel/static-build",
      "src": "package.json",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/src/(.*)", "dest": "/src/$1" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}